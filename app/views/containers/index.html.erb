       </div><!-- /.modal-content -->
     </div><!-- /.modal-dialog -->
   </div><!-- /.modal-content -->
 </div>
</div>
<div class="col-md-12">
  <div class="bs-example bs-example-padded-bottom">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
      CREATE A NEW CONTAINER
    </button>
    <br>
    <br>
  </div>
</div>
      <table class="table  table-hover" > 
          <thead>
           <tr>
            <th>Row</th>

            <th>First Name</th>

            <th>Last Name</th>

            <th>Email</th>

        </tr>
        </thead>
           <tbody>
<%- @containers.each do |c| %>
<%- container = Docker::Container.get(c.id) %>
<%- container.info.each do |key, value| %>
<% if key == 'Name' %>
<% @nametitle = value %>
<% end %>
<% if key == 'id' %>
<% @containid = value %>
<% end %>
<% if key == 'State' %>
<% @state = value %>
<% end %>
<% if key == 'Config' %>
<% @config = value %>
<% end %>
<% end %>
<% if !@state["Running"] %>
<% button = "false" %>
<% wtdo = "start" %>
<% infobalise = {label: "stopped !",color: "default",tdo:"start it !",clrtodo:"success"} %>  
<% end %>
<% if @state["Running"]%>
<% button = "true" %>
<% wtdo = "stop" %>
<% infobalise = {label: "started !",color: "success",tdo:"stop it !",clrtodo:"warning"} %>  
<% end %>

<tr class=<%= infobalise[:color].to_s %> ><td >

<b><h4><%= @nametitle.split('/')[1] %></h4></td>
<td><div class="col-md-1"> <span class="label label-<%= infobalise[:color].to_s %>" > <%= infobalise[:label] %> </span></b></div></td>
<td><div class="col-md-1"> <%= button_to  @containid[0,10]+"..." , container_path(c.id), :method => :"get",  :class => "btn btn-info" %></div></td>


<td><div class="btn-group">

<div class="col-md-1 "><%= button_to infobalise[:tdo], container_path(c.id, wtdo), :method => :"put",  :class => "btn btn-"+infobalise[:clrtodo].to_s, :id => @containid %></div>
   
<div class="col-md-1 col-md-offset-2"><%= button_to "Delete it !", container_path(c.id, "delete"), :method => :"put",  :class => "btn btn-danger"%></div>
</div>
</td></tr>

<% end %>
</tbody>
</table>
</div>
<div style="padding-right: 15px; padding-left: 15px;" >
  <div class="col-md-12">
    <br>
    <div class="panel panel-info %>">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-2"><h2><span class="glyphicon glyphicon-picture" aria-hidden="true"></span> Images<small>   List</small></h2>
          </div>
          <div class="col-md-2 col-md-offset-7" > <h2>
          <button type="button" class="btn btn-success " data-toggle="modal" data-target="#searchModal">
              NEW IMAGE
          </button>
          </h2>
        </div>
        </div>
      </div>
      <div class="panel-body" >
       <table class="table  table-hover" > 
        <thead>
         <tr>
          <th>Id</th>
          <th>Repository</th>
          <th>VirtualSize</th>
          <th>Created</th>
          <th>Controler</th>
         </tr>
        </thead>
      <tbody>
        <%- @images.each do |c| %>
        <tr>
          <td><%= button_to  c.info['id'][0,10]+"..." , image_path(c.info['id']), :method => :"get",  :class => "btn btn-info" %></td>
              <%- image = c.info['RepoTags'][0].split(':')[0] %>
              <% if !image.split("/")[1] %>
              <% imageurl = "_/"+image %>
              <% else %>
              <% imageurl = "u/"+image %> 
              <% end %>
          <td ><%= button_to c.info['RepoTags'][0], "https://registry.hub.docker.com/"+imageurl+"/", :method => :"get",  :class => "btn btn-info", form: { target: '_blank'} %> <%=  %></td>
          <td><%= c.info['VirtualSize']/1024/1024 %> MB</td>
          <td><%= Time.at(c.info['Created']).strftime("%a %d %B at %I:%M%p") %> </td>
          <td>   
         <div class="btn-group">
             <div class="col-md-3"><button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" data-img="<%= image %>">
                  Create container </button>
            </div>
            <div class="col-md-2 col-md-offset-3"><%= button_to "Delete", image_path(c.id, "delete"), :method => :"put",  data: {confirm: "Are you sure ?"}, :class => "btn btn-danger"%>
            </div>
          </div> 
           
          </td>
         </tr>
        <% end %> 
      </tbody>
    </table>
  </div>
</div>

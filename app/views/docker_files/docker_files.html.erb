<div style="padding-right: 15px; padding-left: 15px;" >
  <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Hubs<small>   infos</small></h1>
    <div class="modal-dialog">
      <div style="display: none;" id="fileModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="fileModalLabel" aria-hidden="true">
       <div class="modal-dialog">
         <div class="modal-content">
           <div class="modal-header">
             <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
             <h4 class="modal-title" id="fileModalLabel">Edit container file<a class="anchorjs-link" href="#fileModalLabel"><span class="anchorjs-icon"></span></a></h4>
           </div>
           <div class="modal-body">
             <div class="navbar navbar-default ">
<form accept-charset="UTF-8" action="/docker_files/new" method="get">
  <input id="article_title" name="YOLO" type="text" />
  <textarea id="article_body" name="content" cols="60" rows="12" value=""><%=@content%></textarea>
  <input name="commit" type="submit" value="Save" class="btn btn-success" />
</form>
            </div>
                  <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
          </div>
       </div><!-- /.modal-content -->
     </div><!-- /.modal-dialog -->
   </div><!-- /.modal-content -->
 </div>
 <% pwd = Pathname.pwd %>
 <% path = pwd+"dockerfile"%>

 <table class="table table-hover">
   <thead>
     <tr>
       <th>
	 File
	 </th>
       <th>
	 Description
	 </th>
       </tr>
     </thead>
   <tbody>
      <% path.each_child(with_directory = true) do |f| %>
 <% if f.ftype == "file" %>
 <tr>
   <td>
      <%= f.basename %>
      </td>
   <td>
     none
     </td>
   <td>
     <% File.open(f,"r") do |c|%>
     <% @content = c.read  %>
     <button type="button" class="btn btn-info" data-toggle="modal" data-target="#fileModal" 
    data-cont="<%=@content%>", data-title="<%=f.basename%>">
      Edit
      </button>
      <%end%>
      </td>
   <td>
     <%= button_to "Delete", docker_files_path(f, "delete"), :method => :"put",  data: {confirm: "Are you sure ?"}, :class => "btn btn-danger"%>
     </td>
   </tr>
  <%end%>
   <%end%>
   </tbody>
 </table>






</div>
